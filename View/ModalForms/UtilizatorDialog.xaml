<Window x:Class="Tema1_PS.View.ModalForms.UtilizatorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema1_PS.View.ModalForms"
        mc:Ignorable="d"
        Title="UtilizatorDialog" Height="450" Width="800">
    <Grid>
        <UniformGrid Rows="10" Columns="2" Margin="10">
            <Label Content="ID:"/>
            <TextBox Name="txtId"/>

            <Label Content="Name:"/>
            <TextBox Name="txtName"/>

            <Label Content="Email:"/>
            <TextBox Name="txtEmail"/>

            <Label Content="Password:"/>
            <PasswordBox Name="txtPassword"/>

            <Label Content="User Type:"/>
            <ComboBox Name="cmbUserType">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Regular"/>
            </ComboBox>

            <Label Content="Phone Number:"/>
            <TextBox Name="txtPhoneNumber"/>
        </UniformGrid>

        <Button Content="Save" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,7" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
